<!DOCTYPE html>
<html>
	<head>
		<!-- Global site tag (gtag.js) - Google Analytics -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=UA-176739825-1"></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());

			gtag('config', 'UA-176739825-1');
		</script>

		<!-- Make site responsive on mobile/tablet -->
		<meta charset="UTF-8">
		<meta name="viewport" content="telephone=no, width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
		
		<title>YelpFest</title>
		
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
		<link rel="stylesheet" href="/stylesheets/main.css">
		<link rel="stylesheet" href="/stylesheets/global.css">
		<script src="https://js.stripe.com/v3/"></script>
	</head>
	<body>

	<nav class="navbar navbar-default">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
				  <span class="sr-only">Toggle navigation</span>
				  <span class="icon-bar"></span>
				  <span class="icon-bar"></span>
				  <span class="icon-bar"></span>
				</button>

				<a class="navbar-brand" href="/">YelpFest</a>
			</div>
			<div id="navbar" class="collapse navbar-collapse">
				<ul class="nav navbar-nav">
					<li class="<%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>"><a href="/campgrounds">Home</a></li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<% if(!currentUser){ %>
						<li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"><a href="/login">Login</a></li>
						<li class="<%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>"><a href="/register">Sign Up</a></li>
						<li class="<%= typeof page !== 'undefined' && page === 'checkout' ? 'active' : '' %>"><a href="/checkout">Stripe Payment</a></li>
					<% } else { %>
						<li class="<%= typeof page !== 'undefined' && page === 'checkout' ? 'active' : '' %>"><a href="/checkout">Stripe Payment</a></li>
						<li><a href="/users/<%= currentUser._id%>">Signed In As <strong><%= currentUser.username %></strong></a></li>
						<li><a href="/logout">Logout</a></li>
					<% } %>
				</ul>
			</div>
		</div>
	</nav>
	
	<div class="container">
		<% if(error && error.length > 0){ %>
			<div class="alert alert-danger" role="alert">
				<%= error %>
			</div>	
		<% } %>
		<% if(success && success.length > 0){ %>
			<div class="alert alert-success" role="alert">
				<%= success %>
			</div>	
		<% } %>
	</div>
		
	<div class="container">