<%- include("./partials/checkout-header") %>

<div class="container">

	<div class="row text-center">
		<div class="col-lg-offset-3 col-lg-6 col-sm-offset-2 col-sm-8">
			<div class="sr-root">
				<div class="sr-main">
					<h3 style="margin-top: 5px; margin-bottom: 10px;">Registration Payment</h3>
					<form id="payment-form" class="sr-payment-form">
							<div class="sr-combo-inputs-row">
								<div class="sr-input sr-card-element" id="card-element"></div>
							</div>
							<div class="sr-field-error" id="card-errors" role="alert"></div>
							<button id="submit">
								<div class="spinner hidden" id="spinner"></div>
								<span id="button-text">Pay $<%= amount %></span>
							</button>
					</form>
				</div>
			</div>
		</div>
	</div>
<div id="creditCards">
	<p>Copy & paste desired sample credit card:</p>
	<div>Working card, no authentication required: 4242424242424242</div>
	<div>Authentication required error: 4000002500003155</div>
	<p>Card decline due to insufficient funds error: 4000000000009995</p>
	<p>Type in any numbers for date, CVC, and ZIP code</p>
</div>

</div>


<script src="/scripts/checkout.js"></script>

<%- include("./partials/footer") %>

