<%- include("../partials/header") %>

<!-- <%= user %> -->

<div class="row">
	<div class="col-md-offset-4 col-md-4 col-sm-offset-3 col-sm-6 col-xs-offset-2 col-xs-8">
		<h1 style="text-align: center;">Edit <%= user.username %>'s Profile</h1>
		<!-- <div style="width: 30%; margin: 25px auto;"> -->
			<form action="/users/<%= user._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<label>Username: <em>cannot be changed</em></label>
					<input class="form-control" type="text" value="<%= user.username %>" disabled>
				</div>
				<div class="form-group">
					<label>Password: </label>
					<input class="form-control" placeholder="password cannot be changed" disabled>
				</div>
				<div class="form-group">
					<label>First Name: </label>
					<input class="form-control" type="text" name="user[firstName]" value="<%= user.firstName %>">
				</div>
				<div class="form-group">
					<label>Last Name: </label>
					<input class="form-control" type="text" name="user[lastName]" value="<%= user.lastName %>">
				</div>
				<div class="form-group">
					<label>Email: </label>
					<input class="form-control" type="email" name="user[email]" value="<%= user.email %>">
				</div>
				<div class="form-group">
					<label>User Bio: </label>
					<input class="form-control" rows="5" type="text" name="user[bio]" value="<%= user.bio %>">
				</div>
				<div class="form-group">
					<label>User Avatar URL: </label>
					<input class="form-control" type="text" name="user[avatar]" value="<%= user.avatar %>">
				</div>
				<div class="form-group">
					<% if(user.isAdmin){ %>
						<label>Enter Admin Code: </label>
						<input class="form-control" type="text" placeholder="You're already an admin!" disabled>
					<% }else{ %>
						<label>Enter Admin Code: </label>
						<input class="form-control" type="text" name="user[adminCode]" value="<%= user.adminCode %>">
					<% } %>
				</div>
				<div class="form-group">
					<button class="btn btn-md btn-primary btn-block">Update Profile</button>
				</div>
			</form>
	</div>
	<!-- </div> -->
	<div class="col-xs-12 text-center" style="padding-bottom: 40px;">
		<a href="/users/<%=user._id%>">Go Back</a>
	</div>
</div>

<%- include("../partials/footer") %>